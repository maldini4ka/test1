<!DOCTYPE html>

<html lang="en" >

{{ include('head.html.twig') }}


<body class="m-page--fluid m--skin- m-content--skin-light2 m-header--fixed m-header--fixed-mobile m-aside-left--enabled m-aside-left--skin-dark m-aside-left--offcanvas m-footer--push m-aside--offcanvas-default"  >
<!-- begin:: Page -->

<div class="m-grid m-grid--hor m-grid--root m-page">

    {{ include('header.html.twig') }}

    <!-- begin::Body -->
    <div class="m-grid__item m-grid__item--fluid m-grid m-grid--ver-desktop m-grid--desktop m-body">

        {{ include('leftsidebar.html.twig') }}

        <div class="m-grid__item m-grid__item--fluid m-wrapper">

            <!-- BEGIN: Subheader -->
            <div class="m-subheader ">
                <div class="d-flex align-items-center">
                    <div class="mr-auto">
                        <h3 class="m-subheader__title ">
                            Поиск по: {{ query }}
                        </h3>
                    </div>

                </div>
            </div>
            <!-- END: Subheader -->


            <div class="m-content">
                <!--Begin::Main Portlet-->
                <div class="row">

                    <table class="table">
                        <thead>
                        <tr>

                            <th>Name</th>
                            <th></th>
                            <th>Category</th>
                            <th>Description</th>

                            {% if is_granted('ROLE_USER') %} <th>Сеансы:</th>{% endif %}
                        </tr>
                        </thead>
                        <tbody>
                        {% for result in results %}
                            <tr>

                                <td><h5>{{ result.name }}</h5></td>
                                <td><img src="{{ result.photourl }}" width="120"></td>
                                <td>{{ result.category }}</td>
                                <td>{{ result.description }}</td>

                                <td>
                                    {% if is_granted('ROLE_USER') %}  <a href="{{ path('film_show', {'id': result.id}) }}"><button type="button" class="btn btn-outline-info">Выбрать сеанс</button></a>{% endif %}
                                </td>
                            </tr>
{#                        {% else %}#}
{#                            <tr>#}
{#                                <td colspan="6">no records found</td>#}
{#                            </tr>#}
                        {% endfor %}
                        </tbody>
                    </table>


                </div>
                <!--End::Main Portlet-->





            </div>
        </div>
    </div>
    <!-- end:: Body -->
    {% include ('footer.html.twig') %} }

</div>
<!-- end:: Page -->


</body>
<!-- end::Body -->
</html>
